<h1>Create a Team and Heroes!</h1>
<form method="post" action="/teams">
  <dir class="team">
  Team Name: <input type="text" id="team_name" name="team[name]"><br>
  Team Motto: <input type="text" id="team_motto" name="team[motto]">
  </dir>

  <dir class="members_1">
  <h3>Hero 1</h3>
  Hero's Name: <input type="text" id="member1_name" name="team[members][][name]"><br>
  Hero's Power: <input type="text" id="member1_power" name="team[members][][power]"><br>
  Hero's Biography: <input type="text" id="member1_bio" name="team[members][][biography]">
  </dir>

  <dir class="members_2">
  <h3>Hero 2</h3>
  Hero's Name: <input type="text" id="member2_name" name="team[members][][name]"><br>
  Hero's Power: <input type="text" id="member2_power" name="team[members][][power]"><br>
  Hero's Biography: <input type="text" id="member2_bio" name="team[members][][biography]">
  </dir>

  <dir class="members_3">
  <h3>Hero 3</h3>
  Hero's Name: <input type="text" id="member3_name" name="team[members][][name]"><br>
  Hero's Power: <input type="text" id="member3_power" name="team[members][][power]"><br>
  Hero's Biography: <input type="text" id="member3_bio" name="team[members][][biography]">
  </dir>
  
  <input type="submit" value="submit">
</form>