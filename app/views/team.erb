<h1>Create a Team and Heroes!</h1>
<form method="post" action="/teams">
  <dir class="team">
  Team Name: <input type="text" id="team_name" name="team[name]"><br>
  Team Motto: <input type="text" id="team_motto" name="team[motto]">
  </dir>

  <dir class="hero_1">
  <h3>Hero 1</h3>
  Hero's Name: <input type="text" id="hero_name_1" name="team[hero][][name]"><br>
  Hero's Power: <input type="text" id="hero_power_1" name="team[hero][][power]"><br>
  Hero's Biography: <input type="text" id="hero_biography_1" name="team[hero][][biography]">
  </dir>

  <dir class="hero_2">
  <h3>Hero 2</h3>
  Hero's Name: <input type="text" id="hero_name_2" name="team[hero][][name]"><br>
  Hero's Power: <input type="text" id="hero_power_2" name="team[hero][][power]"><br>
  Hero's Biography: <input type="text" id="hero_biography_2" name="team[hero][][biography]">
  </dir>

  <dir class="hero_3">
  <h3>Hero 3</h3>
  Hero's Name: <input type="text" id="hero_name_3" name="team[hero][][name]"><br>
  Hero's Power: <input type="text" id="hero_power_3" name="team[hero][][power]"><br>
  Hero's Biography: <input type="text" id="hero_biography_3" name="team[hero][][biography]">
  </dir>
</form>